<div class="purpose">
  <div class="purpose__advice">
    <h1 class="bet__welcome">
      How many goals do you think will be score in <%= betData.match.gameChoice
      %> ?
    </h1>
    <form id="betGoals" action="/betgoals" method="post" class="betfs__body">
      <input
        type="text"
        id="betfg"
        name="betfg"
        placeholder="Type your answer here..."
      />
      <br />
      <div class="bet__btn">
        <input type="submit" value="Ok" class="bet__button" />
      </div>
    </form>
  </div>
  <img
    src="/img/friends_joy.jpg"
    alt="a group of friends laughing"
    class="purpose__image"
  />
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.getElementById("betGoals");

    form.addEventListener("submit", function (event) {
      const betgInput = document.getElementById("betfg");
      const betgValue = betgInput.value.trim();

      const scorePattern = /^\d+$/;

      if (!scorePattern.test(betgValue)) {
        event.preventDefault();
        alert(
          "Please enter the number of goals in a number format without space or any character in between, for exemple: '10'."
        );
      }
    });
  });
</script>
