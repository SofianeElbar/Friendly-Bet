<div class="purpose">
  <img
    src="/img/friends_joy.jpg"
    alt="a group of friends laughing"
    class="purpose__image"
  />
  <div class="purpose__advice">
    <h1 class="bet__welcome">
      How many yellow cards do you think will be distributed in <%=
      betData.match.gameChoice %> ?
    </h1>
    <form id="betYellow" action="/betycards" method="post" class="betyc__body">
      <input
        type="text"
        id="betyc"
        name="betyc"
        placeholder="Type your answer here..."
      />

      <br />
      <div class="bet__btn">
        <input type="submit" value="Ok" class="bet__button" />
      </div>
    </form>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.getElementById("betYellow");

    form.addEventListener("submit", function (event) {
      const betyInput = document.getElementById("betyc");
      const betyValue = betyInput.value.trim();

      const ycardsPattern = /^\d+$/;

      if (!ycardsPattern.test(betyValue)) {
        event.preventDefault();
        alert(
          "Please enter the number of yellow cards in a number format without space or any character in between, for exemple: '10'."
        );
      }
    });
  });
</script>
